# Redis Configuration - URI Examples:
# Standard Redis:    redis://user:password@host:port/database
# Redis with SSL:   rediss://user:password@host:port/database
# Unix Socket:      redis-socket:///path/to/socket
# Sentinel:         redis-sentinel://host1:port1,host2:port2,host3:port3/database#mymaster

# Upstash Redis URI (SSL enabled)
REDIS_URL="rediss://default:password@your-instance.upstash.io:6379/0"

# REST API Configuration
KV_REST_API_URL="https://your-instance.upstash.io"
KV_REST_API_TOKEN="your_token_here"
KV_REST_API_READ_ONLY_TOKEN="your_readonly_token_here"

# Upstash Redis Configuration
UPSTASH_REDIS_HOST="your-instance.upstash.io"
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD="your_password_here"
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_token_here"

# Optional Settings
CACHE_STORE="redis"
REDIS_CACHE_DB="0"
DEFAULT_TASH_TTL="3600"
PREFIXED_NAMESPACE="your:namespace"
