# Nyro Redis Mobile - Multi-Database Configuration
# Replace with your actual credentials from Upstash dashboard

# =============================================================================
# PROFILE MANAGEMENT
# =============================================================================

# Current active profile (set to profile name or 'default')
ACTIVE_PROFILE=default

# =============================================================================
# DEFAULT PROFILE
# =============================================================================

# Primary Upstash Redis REST API URL
KV_REST_API_URL=https://loyal-lamb-40648.upstash.io

# Primary Upstash Redis REST API Token
KV_REST_API_TOKEN=your_kv_rest_api_token_here

# =============================================================================
# ADDITIONAL PROFILES (Optional)
# =============================================================================

# Secondary profile example
# PROFILE_DEV_URL=https://dev-instance.upstash.io
# PROFILE_DEV_TOKEN=your_dev_token_here

# Production profile example
# PROFILE_PROD_URL=https://prod-instance.upstash.io
# PROFILE_PROD_TOKEN=your_prod_token_here

# Testing profile example
# PROFILE_TEST_URL=https://test-instance.upstash.io
# PROFILE_TEST_TOKEN=your_test_token_here

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Optional: Default diary name (can be changed when using the app)
DEFAULT_DIARY=garden.diary

# Optional: Maximum entries to read at once
MAX_ENTRIES=50

# Optional: Enable debug mode (set to 1 for verbose output)
DEBUG=0

# =============================================================================
# MASSIVE DATA HANDLING
# =============================================================================

# Maximum size for direct input (in KB)
MAX_DIRECT_INPUT_SIZE=1024

# Temporary directory for large file processing
TEMP_DIR=/tmp/nyro-temp

# Chunk size for large data processing (in KB)
CHUNK_SIZE=512

# Maximum file size for upload (in MB)
MAX_FILE_SIZE=100 